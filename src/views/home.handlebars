<h2 class="text-center my-4">Mis Productos</h2>

<div class="container mt-5">
  <div class="row">
    {{#each products}}
      <div class="col-md-4">
        <div class="card custom-card">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><strong>Código:</strong> {{this.code}}</p>
            <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
            <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
            <p class="card-text"><strong>Categoría:</strong>
              {{this.category}}</p>
            <form
              action="/api/carts/66e0eeeca4962ec94f311555/products/{{this._id}}"
              method="POST"
            >
              <button class="btn btn-primary" type="submit">Agregar al carrito</button>
            </form>
            <div>
              <a href="/products/{{this._id}}" class="btn btn-primary">Ver
                detalles</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center" id="pagination">
      {{#if hasPrevPage}}
        <a href="{{prevLink}}" class="btn btn-outline-primary mx-2">Anterior</a>
      {{/if}}

      {{#if hasNextPage}}
        <a
          href="{{nextLink}}"
          class="btn btn-outline-primary mx-2"
        >Siguiente</a>
      {{/if}}

      <p class="mt-3">Página {{currentPage}} de {{totalPages}}</p>
    </ul>
  </nav>
</div>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.min.js"
></script>

<script src="js/main.js"></script>